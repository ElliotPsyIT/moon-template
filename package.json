{
  "name": "{{name}}",
  "version": "0.0.0",
  "description": "{{description}}",
  "scripts": {
    "watch": "NODE_ENV='development' ./node_modules/.bin/watchify -vd -e js/scripts.js -o dist/build.min.js",
    "serve": "./node_modules/.bin/http-server -o -c 1 -a localhost",
    "bundle-css": "node ./build/bundle-css.js",
    "watch-css": "node ./build/watch.js",
    "dev": "./node_modules/.bin/npm-run-all --parallel watch serve watch-css bundle-css",
    "build": "NODE_ENV='production' node build/build.js"
  },
  "browserify": {
    "transform": [
      "moonify"
    ]
  },
  "dependencies": {
    "moonjs": "{{version}}"
  },
  "devDependencies": {
    "browserify": "14.1.0",
    "clean-css": "4.0.8",
    "html-minifier": "^3.4.1",
    "http-server": "0.9.0",
    "moonify": "0.0.10",
    "npm-run-all": "^2.3.0",
    "uglify-js": "latest",
    "uglifyify": "3.0.4",
    "watchify": "3.9.0"
  },
  "author": "{{author}}"
}
